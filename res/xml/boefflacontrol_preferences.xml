<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/boeffla_soundcontrol_title"
    xmlns:dsp="http://schemas.android.com/apk/res/com.bel.android.dspmanager">

    <PreferenceCategory android:title="@string/general_title">

        <SwitchPreference
            android:key="boeffla_control"
            android:title="@string/boeffla_soundcontrol_title"
            android:summary="@string/boeffla_soundcontrol_summary"
            android:defaultValue="false"
            android:persistent="false" />

        <CheckBoxPreference
            android:key="dac_direct"
            android:title="@string/dacdirect_title"
            android:summary="@string/dacdirect_summary"
            android:dependency="boeffla_control"
            android:persistent="false" />

        <CheckBoxPreference
            android:key="dac_oversampling"
            android:title="@string/dacover_title"
            android:summary="@string/dacover_summary"
            android:dependency="boeffla_control"
            android:persistent="false" />

        <CheckBoxPreference
            android:key="fll_tuning"
            android:title="@string/fll_title"
            android:summary="@string/fll_summary"
            android:dependency="boeffla_control"
            android:persistent="false" />

        <CheckBoxPreference
            android:key="privacy_mode"
            android:title="@string/privacy_mode_title"
            android:summary="@string/privacy_mode_summary"
            android:dependency="boeffla_control"
            android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/adv_title">

        <CheckBoxPreference
            android:key="speak_tuning"
            android:title="@string/speak_tune_title"
            android:summary="@string/speak_tune_summary"
            android:dependency="boeffla_control"
            android:persistent="false" />

        <CheckBoxPreference
            android:key="mono_downmix"
            android:title="@string/mono_title"
            android:summary="@string/mono_summary"
            android:dependency="boeffla_control"
            android:persistent="false" />

        <CheckBoxPreference
            android:key="boeffla_over_suppress"
            android:title="@string/over_saturation_suppress"
            android:summary="@string/empty"
            android:dependency="boeffla_control"
            android:persistent="false" />

        <com.bel.android.dspmanager.preference.SeekBarPreference
            android:title="@string/stereo_exp_title"
            android:key="stereo_expansion"
            android:persistent="false"
            android:summary="@string/stereo_exp_summary"
            android:dependency="boeffla_control"
            android:max="31"
            dsp:min="0"
            dsp:unitsLeft=""
            dsp:unitsRight=""
            android:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_soundcontrol_headphone_gain_title">

        <com.bel.android.dspmanager.preference.SeekBarPreference
            android:title="@string/pref_soundcontrol_headphone_gain_left"
            android:key="boeffla_sc_headphone_left"
            android:persistent="false"
            android:summary="@string/empty"
            android:dependency="boeffla_control"
            android:max="23"
            dsp:min="-10"
            dsp:unitsLeft=""
            dsp:unitsRight=""
            android:defaultValue="0" />

        <com.bel.android.dspmanager.preference.SeekBarPreference
            android:title="@string/pref_soundcontrol_headphone_gain_right"
            android:key="boeffla_sc_headphone_right"
            android:persistent="false"
            android:summary="@string/empty"
            android:dependency="boeffla_control"
            android:max="23"
            dsp:min="-10"
            dsp:unitsLeft=""
            dsp:unitsRight=""
            android:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_soundcontrol_speaker_gain_title">

        <com.bel.android.dspmanager.preference.SeekBarPreference
            android:title="@string/pref_soundcontrol_speaker_gain_title"
            android:key="boeffla_sc_speaker"
            android:persistent="false"
            android:summary="@string/empty"
            android:dependency="boeffla_control"
            android:max="23"
            dsp:min="-10"
            dsp:unitsLeft=""
            dsp:unitsRight=""
            android:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/mic_title">

        <com.bel.android.dspmanager.preference.SeekBarPreference
            android:title="@string/mic_gen_title"
            android:key="boeffla_sc_microphone_gen"
            android:persistent="false"
            android:summary="@string/empty"
            android:dependency="boeffla_control"
            android:max="31"
            dsp:min="0"
            dsp:unitsLeft=""
            dsp:unitsRight=""
            android:defaultValue="0" />

        <com.bel.android.dspmanager.preference.SeekBarPreference
            android:title="@string/mic_call_title"
            android:key="boeffla_sc_microphone_call"
            android:persistent="false"
            android:summary="@string/empty"
            android:dependency="boeffla_control"
            android:max="31"
            dsp:min="0"
            dsp:unitsLeft=""
            dsp:unitsRight=""
            android:defaultValue="0" />

    </PreferenceCategory>

</PreferenceScreen>
